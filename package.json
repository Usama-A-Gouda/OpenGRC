{
  "name": "opengrc",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": ["apps/api", "apps/web"],
  "scripts": {
    "dev": "concurrently \"npm run start:dev --workspace @opengrc/api\" \"npm run dev --workspace @opengrc/web\"",
    "dev:api": "npm run start:dev --workspace @opengrc/api",
    "dev:web": "npm run dev --workspace @opengrc/web",
    "build": "npm run build --workspace @opengrc/api && npm run build --workspace @opengrc/web"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
